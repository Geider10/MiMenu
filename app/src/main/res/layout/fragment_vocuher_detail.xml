<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.VocuherDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivVoucherDetail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:background="@mipmap/co1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvNameVoucherDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="Combo Epica Bacon"/>
            <Button
                android:id="@+id/btnVoucherDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Generar cupón"
                android:layout_marginVertical="8dp"/>
            <LinearLayout
                android:id="@+id/llContentCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tu código"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/tvCodeVoucherDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow_dark"
                    tools:text="55-4070-5494"
                    android:layout_gravity="center"
                    android:textSize="16dp"/>
                <ImageView
                    android:id="@+id/ivQRVoucherDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    tools:background="@color/yellow_dark"
                    android:layout_gravity="center"
                    android:layout_marginVertical="20dp"/>
                <TextView
                    android:id="@+id/tvExpirationVoucherDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="Vence el 06/07/2025"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescriptionVoucherDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="12dp"
                tools:text="Derechos reservados" />
        </LinearLayout>
    </LinearLayout>



</ScrollView>