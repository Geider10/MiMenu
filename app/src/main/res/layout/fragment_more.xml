<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more.MoreFragment"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/orange_dark">
        <ImageView
            android:id="@+id/ivUserMenu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_user"
            android:layout_marginLeft="16dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivUserMenu"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/tvNameMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Yoe Frias"/>

            <TextView
                android:id="@+id/tvProfileMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:text="Perfil  >"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <Button
            android:id="@+id/btnVoucherMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis cupónes"
            android:textColor="@color/text_dark"
            android:textAlignment="textStart"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/text_dark"
            app:iconPadding="12dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnOrderMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis pedidos"
            android:textColor="@color/text_dark"
            android:textAlignment="textStart"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/text_dark"
            app:iconPadding="12dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnExitMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textColor="@color/text_dark"
            android:textAlignment="textStart"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/text_dark"
            app:iconPadding="12dp"/>
    </LinearLayout>
</LinearLayout>